[Unit]
Description=Onduty Server
After=syslog.target
After=network.target

[Service]
Type=simple
User=onduty
Group=onduty
Environment="RACK_ENV=production"
ExecStart=/srv/onduty/bin/puma --config /srv/onduty/config/puma.rb /srv/onduty/config.ru
# Give a reasonable amount of time for the workers to start up/shut down
TimeoutSec=300

[Install]
WantedBy=multi-user.target
